            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
<androidx.core.widget.NestedScrollView
    android:id="@+id/fragattend"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    android:layout_width="match_parent"
    android:paddingBottom="100dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!-- TODO: Update blank fragment layout -->
<FrameLayout
    android:layout_width="match_parent"
    android:id="@+id/myFrame"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/attendanceProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="visible"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:id="@+id/attendaceLayout"
    android:background="@color/blueGrey"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="1dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/cardStrokeColor"
        app:strokeWidth="1dp">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calenderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:mcv_arrowColor="@color/colorPrimary"
            app:mcv_selectionColor="@color/colorPrimary" />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:padding="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        app:strokeWidth="1dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="3dp"
        app:strokeColor="@color/cardStrokeColor"
        android:layout_height="wrap_content">
   <TableLayout
       android:id="@+id/tableAttendance"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/tableMarginColor"
       android:stretchColumns="*"
       android:shrinkColumns="*"
       >
   </TableLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
</FrameLayout>
</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>