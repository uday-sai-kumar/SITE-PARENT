            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
<androidx.core.widget.NestedScrollView
    android:id="@+id/fragattend"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:paddingBottom="100dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/myFrame"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/attendanceProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/attendaceLayout"
            android:background="@color/blackColor"
            android:orientation="vertical"
            >

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="@dimen/cardLayoutMargin"
                app:strokeColor="@color/cardStrokeColor"
                app:strokeWidth="@dimen/cardStrokeWidth">

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calenderView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:mcv_arrowColor="@color/colorAccent"
                    app:mcv_selectionColor="@color/colorAccent"
                    app:mcv_headerTextAppearance="@style/HeaderTextAppearance"
                    app:mcv_weekDayTextAppearance="@style/WeekTextAppearance"
                    app:mcv_dateTextAppearance="@style/DateTextAppearance"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:padding="1dp"
                android:clickable="true"
                android:focusable="true"
                app:strokeWidth="@dimen/cardStrokeWidth"
                style="@style/CardBaground"
                android:layout_margin="@dimen/cardLayoutMargin"
                app:strokeColor="@color/cardStrokeColor"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/absent_periods"
                        android:textAllCaps="false"
                        style="@style/TextViewGreen"/>
                <TableLayout
                    android:id="@+id/tableAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:stretchColumns="*"
                    android:shrinkColumns="*"
                    >
                </TableLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>