<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.udaysaikumar.clgattendance.Fragments.Fragment_Feedback">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Bug Report via WhatsApp"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/bugwhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/share"
                android:layout_height="@dimen/share"
                android:src="@drawable/whatsapp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Bug Report via Mail"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:id="@+id/bugreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/share"
                android:layout_height="@dimen/share"
                android:src="@drawable/mail"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Share"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/appshare"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow>

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:src="@drawable/whatsapp"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:src="@drawable/facebook"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:src="@drawable/instagram"/>

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:src="@drawable/mail"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
