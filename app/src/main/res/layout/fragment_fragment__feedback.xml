<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
android:fitsSystemWindows="true"
    android:background="@color/blueGrey"
    tools:context="com.example.udaysaikumar.clgattendance.Fragments.Fragment_Feedback">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        app:cardCornerRadius="8dp"
                        android:foreground="@drawable/selectableitembackground"
                        android:clickable="true"
                        app:strokeColor="@color/cardStrokeColor"
                        app:strokeWidth="@dimen/cardStrokeWidth"
                        android:focusable="true"
                      >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:text="@string/suggestion"
                                android:textColor="#212121"
                                android:textSize="23sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mySuggestion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:hint="@string/write_suggestion_here"
                                android:inputType="textMultiLine" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@color/cardStrokeColor"
                        app:strokeWidth="@dimen/cardStrokeWidth"
                        android:foreground="?android:attr/selectableItemBackground"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:text="@string/rating"
                                android:textColor="#212121"
                                android:textSize="20sp" />

                            <RatingBar
                                android:id="@+id/myRating"
                                style="@style/Widget.AppCompat.RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="false"
                                android:numStars="5" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="8dp"
                        app:strokeColor="@color/cardStrokeColor"
                        app:strokeWidth="@dimen/cardStrokeWidth"
                        android:foreground="?android:attr/selectableItemBackground"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:text="@string/found_any_bugs"
                                android:textColor="#212121"
                                android:textSize="20sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:id="@+id/myBugs"
                                android:hint="@string/write_bug_here"
                                android:inputType="textMultiLine" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/myProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible"/>
                    <com.google.android.material.button.MaterialButton
                        android:visibility="visible"
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/submit"
                        android:textAllCaps="false" />
</FrameLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:strokeColor="@color/cardStrokeColor"
            app:strokeWidth="@dimen/cardStrokeWidth"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="@string/bug_report_via_whatsapp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bugwhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:strokeWidth="@dimen/cardStrokeWidth"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="7dp">

            <ImageView
                android:layout_width="@dimen/share"
                android:layout_height="@dimen/share"
                android:layout_gravity="center"
                android:src="@drawable/whatsapp" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/bug_report_via_mail"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bugreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:strokeWidth="@dimen/cardStrokeWidth"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="7dp">

            <ImageView
                android:layout_width="@dimen/share"
                android:layout_height="@dimen/share"
                android:layout_gravity="center"
                android:src="@drawable/mail" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="@string/share"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/appshare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="@dimen/cardStrokeWidth"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="7dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>

                        <ImageView
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:layout_gravity="center"
                            android:src="@drawable/whatsapp" />

                        <ImageView
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:layout_gravity="center"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:layout_gravity="center"
                            android:src="@drawable/instagram" />

                        <ImageView
                            android:layout_width="@dimen/share"
                            android:layout_height="@dimen/share"
                            android:layout_gravity="center"
                            android:src="@drawable/mail" />
                    </TableRow>
                </TableLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
