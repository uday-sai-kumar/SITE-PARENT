<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmarks"
    android:background="#FFFFFF"
    android:focusable="true"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.udaysaikumar.clgattendance.Fragments.Fragment_Marks">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/marksprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/relativemarks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_custom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="0sp" />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxHeight="40dp"
                        android:progressDrawable="@drawable/seek_bar_drawable"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_custom"
                    android:orientation="vertical">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:focusableInTouchMode="true"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="#64b5f6"
                            app:tabIndicatorHeight="7sp"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="@color/colorPrimary"
                            app:tabTextColor="#000000" />
                    </androidx.viewpager.widget.ViewPager>

                    <TableLayout
                        android:id="@+id/finalmarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
