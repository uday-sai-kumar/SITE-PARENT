<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blueGrey"
    tools:context="com.example.udaysaikumar.clgattendance.Fragments.Fragment_Marks"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/myAppBar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="#eceff1"
        android:layout_height="100dp"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapseToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#ffffff"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_margin="3dp"
                app:strokeWidth="@dimen/cardStrokeWidth"
                android:padding="1dp"
                app:cardCornerRadius="8dp"
                app:layout_collapseMode="parallax"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:focusable="true"
                app:strokeColor="@color/cardStrokeColor"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_custom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/myView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="0sp" />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxHeight="40dp"
                        android:progressDrawable="@drawable/seek_bar_drawable"/>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

       <!-- <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/myProgress"/>-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragattend"
        android:background="@color/blueGrey"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fitsSystemWindows="true"
        android:isScrollContainer="false"
        android:fillViewport="true"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- TODO: Update blank fragment layout -->

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
            android:id="@+id/marksProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:visibility="visible"
        />

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/marksLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blueGrey"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:padding="1dp"
                app:strokeWidth="@dimen/cardStrokeWidth"
                app:cardCornerRadius="8dp"
                android:background="@color/blueGrey"
                android:layout_margin="@dimen/cardMargin">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:background="@color/blueGrey"
                        android:layout_margin="0dp"
                        android:layout_height="wrap_content"
                        >

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:focusableInTouchMode="true"
                            app:tabGravity="fill"
                            app:tabIndicatorColor="#64b5f6"
                            app:tabIndicatorHeight="7sp"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="@color/colorPrimary"
                            app:tabTextColor="#000000" />
                    </androidx.viewpager.widget.ViewPager>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="@dimen/cardStrokeWidth"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp">
            <TableLayout
                android:id="@+id/finalmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tableMarginColor"
                 />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
</FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>